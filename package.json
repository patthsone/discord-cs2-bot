{
  "name": "discord-cs2-bot",
  "version": "1.0.0",
  "description": "A comprehensive Discord bot with CS2 server monitoring, player greeting, and leveling system",
  "main": "src/index.js",
  "scripts": {
    "start": "node src/index.js",
    "dev": "nodemon src/index.js",
    "bot": "node src/index.js",
    "test": "jest",
    "lint": "echo \"No linting configured\" && exit 0",
    "build": "echo \"No build step required\" && exit 0",
    "ci": "npm ci && npm run db:generate",
    "db:generate": "npx prisma generate",
    "db:push": "npx prisma db push",
    "db:migrate": "npx prisma migrate dev",
    "db:studio": "npx prisma studio",
    "db:seed": "node scripts/seed.js",
    "backup": "node scripts/backup.js",
    "backup:guild": "node scripts/backup.js --guild",
    "backup:list": "node scripts/backup.js --list",
    "restore": "node scripts/restore.js",
    "restore:guild": "node scripts/restore.js --guild",
    "setup": "chmod +x scripts/setup-mysql-redis.sh && ./scripts/setup-mysql-redis.sh",
    "pm2:start": "pm2 start ecosystem.config.js --env production",
    "pm2:stop": "pm2 stop discord-cs2-bot",
    "pm2:restart": "pm2 restart discord-cs2-bot",
    "pm2:logs": "pm2 logs discord-cs2-bot",
    "pm2:monit": "pm2 monit"
  },
  "keywords": [
    "discord",
    "bot",
    "cs2",
    "counter-strike",
    "gaming",
    "leveling"
  ],
  "author": "patthsone",
  "license": "MIT",
  "dependencies": {
    "@prisma/client": "^6.17.0",
    "axios": "^1.6.2",
    "discord.js": "^14.14.1",
    "dotenv": "^16.3.1",
    "gamedig": "^4.1.0",
    "mysql2": "^3.6.5",
    "node-cron": "^3.0.3",
    "pino": "^8.17.2",
    "pino-pretty": "^10.3.1",
    "redis": "^4.6.12",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "jest": "^30.2.0",
    "nodemon": "^3.0.2",
    "prisma": "^6.17.0"
  },
  "engines": {
    "node": ">=18.18.0",
    "npm": ">=8.0.0"
  }
}
